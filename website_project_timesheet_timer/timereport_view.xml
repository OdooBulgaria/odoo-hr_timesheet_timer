<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
<!-- Template for timereport list -->
        <template id="project_timereport" name="Project Timereport">
            &lt;!DOCTYPE html&gt;
            <html style="height: 100%">
                <head>
                    <title>Todo List</title>
                    
  
                </head>
                <body>
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty"> 

                        <section class="mb32 mt16">
                            <div class="container">
                                    
                                    <section class="oe_container oe_dark">
                                        <div class="oe_row">           
                                        <div>
                                            <br></br>
                                            <h2><strong>Todo List</strong></h2>                                                                            
                                            <font size="4">  
                                            <!--Table for todo list-->
                                            <table class="table table-striped">
                                                <t t-foreach="tasks" t-as="t">                                       
                                                <tr><td>
                                                    <!--Todo list-->
                                                    <a t-att-href="'/treport/%s/%s/0' %(user.id,t.id)">
                                                    <t t-raw="t.name"/></a>
                                                    
                                                    <td>
                                                        <!--Notice box on todo list view-->
<!--
                                                            <div class="form-group">
                                                                <textarea type="text" class="form-control" placeholder="notice"><t t-if ="work and work.name" ><t t-esc="work.name"/></t></textarea>
                                                            </div>
-->

                                                        <!--Start/Stop buttons-->
                                                        <form t-att-action="'/treport/%s/%s/1' %(user.id, t.id)" method="POST">
                                                        <t t-if="t.check_started_work()">
                                                        <input name="save" type="submit" class="btn btn-primary btn-xs pull-right mt8 " 
                                                            value="Start"/>
                                                        </t>
                                                        <t t-if="t.check_started_work()==False">
                                                        <input name="save" type="submit" class="btn btn-success btn-xs pull-right mt8 " 
                                                            value="Stop"/>
                                                        </t>
                                                        </form>
<!--
                                                            <input name="save" type="submit" class="btn btn-warning btn-xs pull-right col-sm-2 mt8" value="Save" />
-->
                                                        
                                                    </td>
                                                    </td>
                                                </tr>
                                                </t>
                                            </table>                                          
                                            </font>    
                                        </div>
                                        </div> 
                                    </section>  
                            </div>
                        </section>

                    </div>
                </t>
                </body>
            </html>
        </template>
        
<!-- Template for timereport form -->
        <template id="project_timereport_form" name="Project Timereport Form">
            &lt;!DOCTYPE html&gt;
            <html style="height: 100%">
                <head>
                  <title>Task Details</title> 
                </head>
                <body>
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty"> 

                        <section class="mb32 mt16">
                            <div class="container">
                                    <section class="oe_container oe_dark">
                                        <div class="oe_row">           
                                        <div align="center">
                                            <br></br>
                                            <h2><strong>Details</strong></h2>  
                                            <br/><br/>                                                    
                                            <form t-att-action="'/treport/%s/%s/0' %(user.id, task.id)" method="POST">
                                                <div class="pull-left form-group">
                                                    <label class=" control-label"><t t-raw="task.name"/></label>
                                                    <br/>
                                                    <label class=" control-label" >Deadline: <t t-raw="task.date_deadline"/></label>
                                                </div>
                                                <br/>
                                                <div class="pull-right form-group">
                                                    <label class=" control-label" widget="priority">Priority: <t t-raw="task.priority"/></label>
                                                </div>
                                                <br/><br/><br/>


                                                <div align="left">
                                                    <label for="NoticeInput">Notice</label>
                                                    <textarea class="form-control" name="name" rows="5" placeholder="Enter your notice here" ><t t-if ="work and work.name" ><t t-esc="work.name"/></t></textarea>
                                                </div>
                                                <br/>                                       
                                                    <input name="save" type="submit" class="btn btn-primary btn-lg pull-center mt8" value="Save" />
                                                    <br/><br/>
                                            </form>
                                        </div>
                                        </div> 
                                    </section>  
                            </div>
                        </section>

                    </div>
                </t> 
                </body>
            </html>
        </template>
    </data>
</openerp>
